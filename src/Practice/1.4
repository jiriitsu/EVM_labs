
int isButtonPressed = 0;
int changeColor = 1;

void setup() {
  // put your setup code here, to run once:
  pinMode(D0,  OUTPUT);
  pinMode(D1,  OUTPUT);
  pinMode(D2,  OUTPUT);
  attachInterrupt(D3, trafficLight, FALLING);

}

void loop()
{

}
void trafficLight() {
  if(changeColor == 1)
  {
    digitalWrite(D0, HIGH);
    digitalWrite(D1, LOW);
    digitalWrite(D2, LOW);
    isButtonPressed = 1;
  }
  else if(changeColor == 2)
  {
    digitalWrite(D0, LOW);
    digitalWrite(D1, HIGH);
    digitalWrite(D2, LOW);
    isButtonPressed = 1;
  }
  else if(changeColor == 3)
  {
    digitalWrite(D0, LOW);
    digitalWrite(D1, LOW);
    digitalWrite(D2, HIGH);
    isButtonPressed = 1;
  }
}
